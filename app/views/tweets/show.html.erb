<p id="notice"><%= notice %></p>

<p>
  <strong>投稿内容:</strong>
  <%= @tweet.content %>
</p>

<p>
  <strong>投稿者:</strong>
  <%= @users.find_by(id: @tweet.user_id).name %>

</p>
<% if @tweet.user_id == current_user.id %>
  <%= link_to '編集', edit_tweet_path(@tweet) %>
  <%= link_to '削除', @tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
<% else %>
  <td id="favorite_buttons_<%= @tweet.id %>">
　  <%= render "favorites/favorites", tweet: @tweet %>
  </td>
<% end %>
<p>
  <%= link_to '戻る', tweets_path %>
</p>

